<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebForm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebForm.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/bundles/jqueryui"></script>
<script src="~/bundles/jqueryval"></script>
<script>
let url = '@Url.Action("GetSubTypes", "Widget")'
let ddlType = $('#ddlType')
let ddlSubType = $('#ddlSubType')

ddlType.on('change', function () {
    ddlSubType.empty();
    let typeVal = ddlType.val()
    ddlSubType.append(new Option("Select Sub-type", ""))
    $.getJSON(url, { type: typeVal}, function (response) {
        $.each(response, function (index, item) {
            let subtype = new Option(item.text, item.value)
            ddlSubType.append(subtype)
        })
    })
})
</script>
</body>
</html>